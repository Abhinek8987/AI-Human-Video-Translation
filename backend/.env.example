# FastAPI config
APP_NAME=Human Video Translator API
APP_ENV=development
APP_DEBUG=true
# In development, backend allows all origins to simplify testing across ports
CORS_ORIGINS=http://localhost:5173

# Storage
STORAGE_BACKEND=local
STORAGE_DIR=backend/storage
AUTO_DELETE=true

# Database (mock by default)
DB_BACKEND=memory
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB=human_video_translator

# AI backends (mock by default)
AI_STT_BACKEND=mock
AI_TRANSLATE_BACKEND=mock
AI_TTS_BACKEND=mock
AI_LIPSYNC_BACKEND=mock
AI_EMOTION_BACKEND=mock

# Auth (mock JWT secret)
JWT_SECRET=devsecret
JWT_ALGORITHM=HS256
JWT_EXPIRES_MINUTES=1440

# AI provider keys (optional but recommended for real transcription)
# Get a key at https://platform.openai.com/ and paste here
OPENAI_API_KEY=

# Optional translation service override (fallback if googletrans fails)
# Default uses the public demo: https://libretranslate.de
LIBRETRANSLATE_URL=
