# FastAPI config
APP_NAME=Human Video Translator API
APP_ENV=development
APP_DEBUG=true
CORS_ORIGINS=http://localhost:5173

# Storage
STORAGE_BACKEND=local
STORAGE_DIR=backend/storage
AUTO_DELETE=true

# Database (mock by default)
DB_BACKEND=memory
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB=human_video_translator

# AI backends (mock by default)
AI_STT_BACKEND=mock
AI_TRANSLATE_BACKEND=mock
AI_TTS_BACKEND=mock
AI_LIPSYNC_BACKEND=mock
AI_EMOTION_BACKEND=mock

# Auth (mock JWT secret)
JWT_SECRET=devsecret
JWT_ALGORITHM=HS256
JWT_EXPIRES_MINUTES=1440

# Local Whisper model size (tiny/base/small/medium/large)
WHISPER_MODEL_SIZE=tiny

# Translation fallback service (LibreTranslate). You can switch to your own instance for reliability.
LIBRETRANSLATE_URL=https://libretranslate.de
